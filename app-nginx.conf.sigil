worker_processes 1; # 1
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 1024; # 2
}

http {
  types_hash_max_size 2048;
  include mime.types;

  server {
    listen {{ $.PORT }}
    server_name  _;
    root /app/www/public; # 3
    index index.html;
    port_in_redirect off;

    error_page 404 /404.html;
    location / {
      try_files $uri $uri.html $uri/ =404; # 4
    }
  }
}
